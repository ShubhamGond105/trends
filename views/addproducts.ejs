<%- include('./partials/header') %>

<% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-10 py-20 flex flex-grow">
        <!-- Sidebar -->
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2 text-lg font-semibold hover:text-blue-600" href="#">All Products</a>
                <a class="block w-fit mb-2 text-lg font-semibold hover:text-blue-600" href="#">Create new product</a>
            </div>
        </div>

        <!-- Main Content -->
        <main class="w-3/4 bg-white p-8 shadow ml-4 rounded-lg">
            <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
            
            <form autocomplete="off" action="/product/create" method="post" enctype="multipart/form-data">
                
                <!-- Product Details Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4">Product Details</h3>
                    <div class="mb-6">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border w-full" required>
                    </div>

                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block mb-2 font-medium">Product Name</label>
                            <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full" required>
                        </div>
                        <div>
                            <label class="block mb-2 font-medium">Product Price</label>
                            <input name="price" type="number" step="0.01" placeholder="Product Price" class="border p-2 rounded w-full" required>
                        </div>
                        <div>
                            <label class="block mb-2 font-medium">Discount</label>
                            <input name="discount" type="number" step="0.01" placeholder="Discount Price (optional)" class="border p-2 rounded w-full">
                        </div>
                    </div>
                </div>

                <!-- Panel and Color Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4">Panel Details</h3>
                    <div class="grid grid-cols-3 gap-6">
                        <div>
                            <label class="block mb-2 font-medium">Background Color</label>
                            <input name="bgcolor" type="text" placeholder="#FFFFFF" class="border p-2 rounded w-full" required pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" title="Enter a valid hex color code">
                        </div>
                        <div>
                            <label class="block mb-2 font-medium">Panel Color</label>
                            <input name="panelcolor" type="text" placeholder="#000000" class="border p-2 rounded w-full" pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" title="Enter a valid hex color code">
                        </div>
                        <div>
                            <label class="block mb-2 font-medium">Text Color</label>
                            <input name="textcolor" type="text" placeholder="#FF0000" class="border p-2 rounded w-full" pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" title="Enter a valid hex color code">
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div>
                    <input class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" type="submit" value="Create New Product">
                </div>

            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
